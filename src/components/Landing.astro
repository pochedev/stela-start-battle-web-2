---
import { Image } from "astro:assets";
import background from "../assets/background.png";
import logo from "../assets/logo.webp";
---

<section>
  <div class="banner">
    <picture class="back">
      <Image class="background" src={background} alt="back" />
    </picture>
    <div class="info">
      <picture>
        <Image class="logo" src={logo} alt="logo" />
        <div>
          <h1>Lorem ipsum dolor, sit amet consectetur</h1>
          <p>
            Lorem ipsum dolor, sit amet consectetur adipisicing elit. Obcaecati,
            quasi perferendis? Quibusdam similique dolore nostrum quas nesciunt
            consectetur odit animi, eos dolores minima expedita amet. Magni,
            recusandae? Sequi, dignissimos ad.
          </p>
        </div>
      </picture>
    </div>
  </div>

  <style>
    .banner {
      display: grid;
      place-content: center;
      padding-left: 4vw;
      padding-top: 10vw;
      padding-bottom: 10vw;
      position: relative;
    }

    .back {
      position: absolute;
      width: 100%;
      height: 100%;
      z-index: 0;
    }

    .background {
      width: 100%;
      height: 100%;
      object-fit: cover;
      opacity: 0.5;
    }

    .info {
      width: 40%;
      color: #fff;
      text-shadow: 0 5px 30px #0004;
      box-sizing: border-box;
      z-index: 1;
      backdrop-filter: blur(2px);

      h1 {
        font-size: calc(2vw + 1em);
        font-weight: bolder;
        margin-top: 4%;
        margin-bottom: 4%;
        font-family: "Press Start 2P", serif;
        font-weight: 400;
        font-style: normal;
        word-spacing: -2vw;
        word-break: break-word;
      }
      p {
        font-size: calc(0.8vw + 0.5em);
        color: #fff;
        margin: 0;
        font-family: "VT323", serif;
        font-weight: 400;
        font-style: normal;
      }
    }

    .logo {
      width: 16vw;
      min-width: 120px;
      height: auto;
    }

    @media (max-width: 900px) {
      .info {
        width: 80%;
      }
    }

    @media (max-width: 600px) {
      .info {
        width: 70%;
        margin: auto;
      }
    }
  </style>
</section>
