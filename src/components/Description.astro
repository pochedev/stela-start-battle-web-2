---
import { Image } from "astro:assets";
import samurai from "../assets/samurai.png";
---

<section>
  <div class="intro">
    <h2>Lorem ipsum dolor, sit amet</h2>
    <h1>Lorem ipsum dolor</h1>
    <p>
      Lorem ipsum dolor sit amet consectetur adipisicing elit. Quasi, in quae,
      commodi rerum maiores cum consequuntur itaque, aliquam recusandae
      cupiditate a! Tempora, assumenda nisi? Aliquam assumenda obcaecati illo et
      sunt!
    </p>
  </div>

  <div class="info">
    <div class="video">
      <iframe
        src="https://www.youtube.com/embed/SAdulUeKpsM?si=sLX20zC9ZCv-lTHE"
        title="YouTube video player"
        frameborder="0"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
        referrerpolicy="strict-origin-when-cross-origin"
        allowfullscreen></iframe>
    </div>
    <div class="wapper">
      <div class="description">
        <h2>Lorem ipsum dolor, sit</h2>
        <p>
          Lorem ipsum dolor sit amet, consectetur adipisicing elit. Id sequi cum
          corrupti veritatis esse praesentium vero quo
        </p>
      </div>
      <picture class="content">
        <Image class="item" src={samurai} alt="samurai" />
      </picture>
    </div>
  </div>
</section>

<style>
  .intro {
    color: #fff;
    text-shadow: 0 5px 10px #0004;
    text-align: center;
    width: 70%;
    padding-top: 4vh;
    margin: 0 auto;

    h2 {
      font-size: calc(1vw + 1em);
      margin: 0;
      font-family: "Silkscreen", serif;
      font-weight: 400;
      font-style: normal;
      word-break: break-word;
      text-shadow:
        0 1px 10px #ffeb55,
        0 2px 10px #d91656,
        0px 3px 45px #81127c;
    }

    h1 {
      font-size: calc(3vw + 1em);
      margin: 0;
      padding-bottom: 20px;
      font-family: "Press Start 2P", serif;
      font-weight: 400;
      font-style: normal;
      word-break: break-word;
      text-shadow:
        0 0 5px black,
        0 1px 10px #ffeb55,
        0 2px 10px #d91656,
        0px 3px 45px #81127c;
    }

    p {
      font-size: calc(1.1vw + 0.5em);
      font-family: "VT323", serif;
      font-weight: 400;
      font-style: normal;
      text-align: start;
      text-shadow: 0px 0.5px 3px black;
    }
  }

  .info {
    width: 85%;
    margin: 0 auto;
    padding-top: 6vw;
    display: flex;
    align-content: center;
    margin-bottom: 100px;
  }
  .video {
    width: 70%;
    height: 28em;
    margin-right: 5vw;
    overflow: hidden;
    iframe {
      width: 100%;
      height: 100%;
    }
  }

  .wapper {
    width: 40%;
  }

  .description {
    width: 100%;
    font-family: sans-serif;
    font-weight: bolder;
    color: #fff;
    text-shadow: 0px 0.5px 3px black;

    h2 {
      font-size: calc(1vw + 1.2em);
      margin: 0;
      font-family: "Silkscreen", serif;
      font-weight: 400;
      font-style: normal;
      text-shadow:
        0 1px 10px #ffeb55,
        0 2px 10px #d91656,
        0px 3px 45px #81127c;
    }

    p {
      font-size: calc(0.8vw + 0.5em);
      font-family: "VT323", serif;
      font-weight: 400;
      font-style: normal;
    }
  }

  .item {
    width: 300px;
    height: 300px;
  }

  @media (max-width: 900px) {
    .intro {
      width: 80%;
      margin: auto;
      p {
        font-size: calc(0.8vw + 0.8em);
      }
    }

    .info {
      display: block;
      width: 100%;
      height: 50vw;
    }
    .video {
      width: 80%;
      height: 100%;
      margin: auto;
    }

    .wapper {
      width: 80%;
      margin: auto;
    }

    .description {
      width: 100%;
      margin: auto;
      p {
        font-size: calc(0.8vw + 0.8em);
      }
    }

    .content {
      width: 100%;

      display: flex;
      justify-content: center;
    }
  }

  @media (max-width: 400px) {
    .info {
      width: 100%;
      height: 60vw;

      p {
        font-size: calc(0.8vw + 1em);
      }
    }

    .video {
      width: 100%;
      height: 100%;
    }

    .description {
      width: 100%;
    }

    .item {
      max-width: 300px;
      min-width: 100px;
    }
  }
</style>
