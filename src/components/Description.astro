<style>
  .intro {
    font-family: sans-serif;
    font-weight: bolder;
    color: #fff;
    text-shadow: 0 5px 10px #0004;
    text-align: center;
    width: 70%;
    padding-top: 4vh;
    margin: 0 auto;

    h2 {
      font-size: calc(1vw + 1em);
      margin: 0;
    }

    h1 {
      font-size: calc(3vw + 1em);
      margin: 0;
      padding-bottom: 20px;
    }

    p {
      font-size: calc(0.8vw + 0.5em);
    }
  }

  .info {
    width: 85%;
    margin: 0 auto;
    padding-top: 6vw;
    display: flex;
    align-content: center;
    margin-bottom: 100px;
  }
  .video {
    width: 70%;
    height: 28vw;
    margin-right: 5vw;
    overflow: hidden;
    img {
      object-fit: cover;
      width: 100%;
      height: 100%;
    }
  }

  .description {
    width: 40%;
    font-family: sans-serif;
    font-weight: bolder;
    color: #fff;
    text-shadow: 0 5px 10px #0004;

    h2 {
      font-size: calc(1vw + 1em);
      margin: 0;
    }

    p {
      font-size: calc(0.8vw + 0.5em);
    }
  }

  @media (max-width: 700px) {
    .info {
      display: block;
    }
    .video {
      width: 100%;
      height: 100%;
    }
    .description {
      width: 100%;
    }
  }

  @media (max-width: 400px) {
    .info {
      display: block;
      margin: 0px;
      width: 100%;
    }
    .description {
      width: 80%;
      margin: 0 auto;
    }
  }
</style>
